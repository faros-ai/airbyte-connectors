{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["faros-airbyte-cdk/**", "faros-airbyte-common/**", "sources/faros-graphql-source/**"],
      "outputs": ["lib/**"]
    },
    "clean": {
      "cache": false
    },
    "fix": {
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    },
    "lint": {
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["test/**", "resources/**", "test_files/**"]
    },
    "test-cov": {
      "dependsOn": ["build"],
      "inputs": ["test/**", "resources/**", "test_files/**"]
    }
  }
}
