{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "fireHydrant Spec",
    "type": "object",
    "required": [
      "token",
      "cutoff_days"
    ],
    "additionalProperties": false,
    "properties": {
      "token": {
        "type": "string",
        "title": "API Token",
        "description": "In order to create token, go to https://app.firehydrant.io/organizations/bots",
        "airbyte_secret": true
      },
      "cutoff_days": {
        "type": "integer",
        "title": "Cutoff Days",
        "default": 90,
        "description": "Only fetch data updated after cutoff"
      },
      "page_size": {
        "type": "number",
        "title": "Page size",
        "description": "Page size to use when requesting records from Firehydrant API",
        "default": 10
      },
      "version": {
        "type": "string",
        "title": "API Version",
        "description": "API Version of Firehydrant API",
        "default": "v1",
        "examples": [
          "v1"
        ]
      }
    }
  }
}
