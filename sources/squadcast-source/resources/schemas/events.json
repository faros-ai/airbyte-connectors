{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "incident_id": {
      "type": "string"
    },
    "alert_source_id": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "time_of_creation": {
      "type": "string"
    },
    "tags": {
      "type": "object",
      "patternProperties": {
        ".": {
          "value": {
            "type": "string"
          },
          "color": {
            "type": "string"
          }
        }
      }
    },
    "deduplication_reason": {
      "type": "object",
      "properties": {
        "matched_event_id": {
          "type": "string"
        },
        "evaluated_expression": {
          "type": "string"
        },
        "time_window": {
          "type": "string"
        }
      }
    },
    "payload": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "event_id": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "metric": {
          "type": "object",
          "properties": {
            "absolute": {
              "type": "object",
              "properties": {
                "current_value": {
                  "type": "number"
                },
                "threshold": {
                  "type": "number"
                },
                "unit": {
                  "type": "string"
                }
              }
            },
            "pod": {
              "type": "string"
            },
            "relative": {
              "type": "object",
              "properties": {
                "current_value": {
                  "type": "number"
                },
                "threshold": {
                  "type": "number"
                }
              }
            },
            "time": {
              "type": "string"
            }
          }
        },
        "status": {
          "type": "string"
        },
        "assignee": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "type": {
              "type": "string"
            }
          }
        },
        "created_by": {
          "type": "string"
        },
        "tags": {
          "type": "object",
          "patternProperties": {
            ".": {
              "value": {
                "type": "string"
              },
              "color": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
