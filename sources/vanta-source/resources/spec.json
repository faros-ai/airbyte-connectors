{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Vanta Spec",
    "type": "object",
    "required": ["client_id", "client_secret"],
    "additionalProperties": true,
    "properties": {
      "client_id": {
        "type": "string",
        "title": "API Client Id",
        "description": "Vanta Client Id"
      },
      "client_secret": {
        "type": "string",
        "title": "API Client Secret",
        "description": "Vanta Client Secret"
      },
      "apiUrl": {
        "type": "string",
        "title": "Vanta GraphQL API URL",
        "description": "Vanta GraphQL API, e.g. ",
        "default": "https://api.vanta.com/"
      },
      "page_size": {
        "type": "number",
        "title": "Page Limit",
        "minimum": 1,
        "maximum": 100,
        "default": 100,
        "description": "The maximum number of objects in a single response."
      },
      "timeout": {
        "type": "number",
        "title": "Request Timeout",
        "default": 60000,
        "description": "The time allowed for a request to timeout (in milliseconds)."
      },
      "skipConnectionCheck": {
        "type": "boolean",
        "title": "Skip Connection Check",
        "default": false
      }
    }
  }
}
