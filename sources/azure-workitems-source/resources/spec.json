{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Azure Workitems Spec",
    "type": "object",
    "required": [
      "instance",
      "access_token",
      "organization"
    ],
    "additionalProperties": true,
    "properties": {
      "instance": {
        "title": "Instance Type",
        "description": "Choose how your Azure instance is setup",
        "type": "object",
        "order": 0,
        "oneOf": [
          {
            "type": "object",
            "title": "cloud",
            "properties": {
              "type": {
                "type": "string",
                "const": "cloud",
                "order": 0
              }
            },
            "required": [
              "type"
            ]
          },
          {
            "type": "object",
            "title": "server",
            "properties": {
              "type": {
                "type": "string",
                "const": "server",
                "order": 0
              },
              "api_url": {
                "order": 1,
                "type": "string",
                "title": "API URL"
              }
            },
            "required": [
              "type",
              "api_url"
            ]
          }
        ]
      },
      "access_token": {
        "order": 3,
        "type": "string",
        "title": "Azure Access Token",
        "description": "Your unaltered Azure Access Token",
        "airbyte_secret": true
      },
      "organization": {
        "order": 4,
        "type": "string",
        "title": "Organization",
        "description": "Azure Organization"
      },
      "projects": {
        "order": 5,
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        },
        "title": "Project IDs or project names",
        "description": "Azure Projects. If empty all available projects will be processed."
      },
      "additional_fields": {
        "order": 6,
        "type": "array",
        "title": "Additional Fields",
        "items": {
          "type": "string"
        },
        "description": "Fields to include on tasks.",
        "examples": [
          "Area Path",
          "Acceptance Criteria",
          "Accepted By"
        ]
      },
      "fetch_work_item_comments": {
        "order": 7,
        "type": "boolean",
        "title": "Fetch Work Item Comments",
        "description": "Include work item comments in the data stream. Warning: This may significantly increase API response time and data volume.",
        "default": false
      },
      "cutoff_days": {
        "order": 8,
        "type": "integer",
        "title": "Cutoff Days",
        "description": "The threshold after which data should be synced.",
        "default": 90
      },
      "page_size": {
        "order": 9,
        "type": "integer",
        "title": "Page Size",
        "description": "The number of items to retrieve per call. Corresponds to '$top' parameter in Azure DevOps API.",
        "default": 100
      },
      "max_retries": {
        "order": 10,
        "type": "integer",
        "title": "Max Number of Retries",
        "description": "The max number of retries before giving up on retrying requests to Azure DevOps API.",
        "default": 3
      },
      "request_timeout": {
        "order": 11,
        "type": "integer",
        "title": "Request Timeout",
        "description": "The max time in milliseconds to wait for a request to complete (0 - no timeout).",
        "default": 300000
      }
    }
  }
}
