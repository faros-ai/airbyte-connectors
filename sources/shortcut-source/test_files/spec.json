{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "shortcut Spec",
    "type": "object",
    "required": [
      "base_url",
      "version",
      "token"
    ],
    "additionalProperties": false,
    "properties": {
      "base_url": {
        "type": "string",
        "title": "Shortcut Base URL",
        "description":"Shortcut Base URL",
        "default":"https://api.app.shortcut.com",
        "examples": [
          "https://api.app.shortcut.com"
        ]
      },
      "version": {
        "type": "string",
        "title": "Shortcut version",
        "description":"Shortcut version",
        "default":"v3",
        "examples": [
          "v3"
        ]
      },
      "token": {
        "type": "string",
        "title": "Shortcut Token",
        "description": "In order to generate a Workspace specific API token, navigate to Settings > Your Account > API Tokens.",
        "airbyte_secret": true
      },
      "project_public_id":{
        "type": "number",
        "title": "project public ID", 
        "description": "If set it will pull all stories from only this project. If no it pull all stories from all projects"
      }
    }
  }
}