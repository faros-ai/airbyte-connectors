{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "userId": {
      "type": "integer"
    },
    "userPsNo": {
      "type": "string"
    },
    "userFname": {
      "type": "string"
    },
    "userLname": {
      "type": "string"
    },
    "userEmail": {
      "type": "string",
      "format": "email"
    },
    "userPhno": {
      "type": "string"
    },
    "userMobno": {
      "type": "string"
    },
    "activeUser": {
      "type": "boolean"
    },
    "hireDate": {
      "type": "string",
      "format": "date-time"
    },
    "userAddress": {
      "type": "object",
      "properties": {
        "departmentName": {
          "type": "string"
        }
      }
    },
    "userFlex": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "flexId": {
            "type": "integer"
          },
          "flexName": {
            "type": "string"
          },
          "flexValue": {
            "type": "string"
          }
        },
        "required": ["flexId", "flexName", "flexValue"]
      }
    }
  }
}
