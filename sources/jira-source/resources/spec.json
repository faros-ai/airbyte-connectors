{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Jira Configuration Spec",
    "type": "object",
    "required": [
      "url"
    ],
    "additionalProperties": true,
    "properties": {
      "url": {
        "order": 1,
        "title": "Jira URL",
        "description": "URL of the Jira instance",
        "type": "string"
      },
      "username": {
        "order": 2,
        "title": "Username",
        "description": "Username for authentication (optional)",
        "type": "string"
      },
      "password": {
        "order": 3,
        "title": "Password",
        "description": "Password for authentication (optional)",
        "type": "string"
      },
      "token": {
        "order": 4,
        "title": "Token",
        "description": "Token for authentication (optional)",
        "type": "string"
      },
      "sync_additional_fields": {
        "order": 5,
        "title": "Sync Additional Fields",
        "description": "Flag to indicate if additional fields should be synced",
        "type": "boolean"
      },
      "additional_fields": {
        "order": 6,
        "title": "Additional Fields",
        "description": "Additional fields to be synced",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "additional_fields_array_limit": {
        "order": 7,
        "title": "Additional Fields Array Limit",
        "description": "Limit for additional fields array",
        "type": "integer"
      },
      "reject_unauthorized": {
        "order": 8,
        "title": "Reject Unauthorized",
        "description": "Flag to indicate if unauthorized requests should be rejected",
        "type": "boolean"
      },
      "concurrency_limit": {
        "order": 9,
        "title": "Concurrency Limit",
        "description": "Limit for concurrency",
        "type": "integer"
      },
      "max_retries": {
        "order": 10,
        "title": "Max Retries",
        "description": "Maximum number of retries",
        "type": "integer"
      },
      "page_size": {
        "order": 11,
        "title": "Page Size",
        "description": "Page size for pagination",
        "type": "integer"
      },
      "timeout": {
        "order": 12,
        "title": "Timeout",
        "description": "Request timeout in milliseconds",
        "type": "integer"
      },
      "use_user_prefix_search": {
        "order": 13,
        "title": "Use User Prefix Search",
        "description": "Flag to indicate if user prefix search should be used (optional)",
        "type": "boolean"
      },
      "project_keys": {
        "order": 14,
        "title": "Project Keys",
        "description": "Project keys to filter the search (optional)",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "cutoff_days": {
        "order": 15,
        "title": "Cutoff Days",
        "description": "Number of days to cutoff for syncing (optional)",
        "type": "integer"
      },
      "cutoff_lag_days": {
        "order": 16,
        "title": "Cutoff Lag Days",
        "description": "Lag days to consider for cutoff (optional)",
        "type": "integer"
      },
      "board_ids": {
        "order": 17,
        "title": "Board IDs",
        "description": "Board IDs to filter the search (optional)",
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  }
}
