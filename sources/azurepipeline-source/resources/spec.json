{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Azure Pipeline Spec",
    "type": "object",
    "required": ["access_token", "organization", "project", "cutoff_days"],
    "additionalProperties": true,
    "properties": {
      "access_token": {
        "type": "string",
        "title": "Access Token",
        "description": "Azure Access Token",
        "airbyte_secret": true
      },
      "organization": {
        "type": "string",
        "title": "Organization",
        "description": "Azure Organization"
      },
      "project": {
        "type": "string",
        "title": "Project",
        "description": "Azure Project"
      },
      "cutoff_days": {
        "type": "integer",
        "title": "Cutoff Days",
        "default": 90,
        "description": "Fetch builds and releases created within the specified number of days"
      },
      "api_version": {
        "type": "string",
        "title": "API Version",
        "description": "Azure API Version",
        "default": "6.0"
      }
    }
  }
}
