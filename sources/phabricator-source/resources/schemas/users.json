{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "type": {
      "type": "string"
    },
    "phid": {
      "type": "string"
    },
    "fields": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "realName": {
          "type": "string"
        },
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dateCreated": {
          "type": "integer"
        },
        "dateModified": {
          "type": "integer"
        },
        "policy": {
          "type": "object",
          "properties": {
            "view": {
              "type": "string"
            },
            "edit": {
              "type": "string"
            }
          },
          "required": ["view", "edit"]
        }
      },
      "required": [
        "username",
        "realName",
        "roles",
        "dateCreated",
        "dateModified",
        "policy"
      ]
    },
    "attachments": {
      "type": "object"
    }
  },
  "required": ["id", "type", "phid", "fields", "attachments"]
}
