{
  "name": "bamboohr-source",
  "version": "0.0.1",
  "description": "BambooHR Airbyte source",
  "keywords": [
    "airbyte",
    "source",
    "faros",
    "bamboo",
    "bamboohr"
  ],
  "homepage": "https://www.faros.ai",
  "author": "Faros AI, Inc.",
  "license": "Apache-2.0",
  "files": [
    "lib/",
    "resources/"
  ],
  "engines": {
    "node": ">=18"
  },
  "main": "./lib",
  "scripts": {
    "build": "tsc -p src",
    "clean": "rm -rf lib node_modules out",
    "fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts' && npm run lint -- --fix",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",

    "test": "jest --verbose --color",
    "test-cov": "jest --coverage --verbose --color",
    "watch": "tsc -b -w src test"
  },
  "dependencies": {
    "axios": "^1.7.4",
    "commander": "^9.3.0",
    "faros-airbyte-cdk": "*",
    "verror": "^1.10.1"
  },
  "jest": {
    "coverageDirectory": "out/coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 10000,
    "transform": {
      "\\.[jt]sx?$": [
        "ts-jest",
        {
          "tsconfig": "test/tsconfig.json"
        }
      ]
    }
  }
}
