{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Backlog Spec",
    "type": "object",
    "required": ["apiKey", "space", "cutoff_days"],
    "additionalProperties": true,
    "properties": {
      "space": {
        "type": "string",
        "title": "SpaceID",
        "description": "Backlog SpaceID",
        "examples": ["devcube"]
      },
      "apiKey": {
        "type": "string",
        "title": "API Key",
        "description": "Backlog API Key",
        "airbyte_secret": true
      },
      "cutoff_days": {
        "type": "integer",
        "title": "Cutoff Days",
        "default": 90,
        "description": "Only fetch data updated after cutoff"
      },
      "project_id": {
        "type": ["integer", "null"],
        "title": "Project ID",
        "description": "Only pull issues from this project. If not set, all issues from all projects will be pulled."
      }
    }
  }
}
