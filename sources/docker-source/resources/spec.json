{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Docker Spec",
    "type": "object",
    "required": [
      "username",
      "password",
      "repositories"
    ],
    "additionalProperties": false,
    "properties": {
      "username": {
        "type": "string",
        "title": "Username",
        "description": "DockerHub Username"
      },
      "password": {
        "type": "string",
        "title": "Password",
        "description": "DockerHub Password",
        "airbyte_secret": true
      },
      "repositories": {
        "type": "array",
        "title": "Repositories",
        "description": "Fetch tags to exact repositories",
        "item": {
          "type": "string"
        }
      },
      "authEndpoint": {
        "type": "string",
        "title": "Authorization endpoint",
        "description": "Endpoint used to get access token",
        "default": "tags/list"
      },
      "bearerAuthorization": {
        "type": "boolean",
        "title": "Bearer Authorization",
        "default": "Use bearer access token or authorize using user/password auth"
      },
      "registryBase": {
        "type": "string",
        "title": "Registry base",
        "default": "registry-1.docker.io"
      },
      "pageSize": {
        "type": "number",
        "title": "Page size",
        "default": 100
      },
      "maxPages": {
        "type": "number",
        "title": "Max pages",
        "default": 5
      }
    }
  }
}
