{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "projectName": {
      "type": "string"
    },
    "imageConfig": {
      "type": ["object", "null"],
      "properties": {
        "config": {
          "type": "object",
          "properties": {
            "Labels": {
              "type": ["object", "null"],
              "additionalProperties": true,
              "additionalItems": true
            }
          }
        },
        "created": {
          "type": "string"
        }
      }
    },
    "imageManifest": {
      "type": ["object", "null"],
      "properties": {
        "schemaVersion": {
          "type": "number"
        },
        "mediaType": {
          "type": "string"
        },
        "config": {
          "type": "object",
          "properties": {
            "properties": {
              "mediaType": {
                "type": "string"
              },
              "size": {
                "type": "number"
              },
              "digest": {
                "type": "string"
              }
            }
          }
        },
        "layers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "properties": {
                "mediaType": {
                  "type": "string"
                },
                "size": {
                  "type": "number"
                },
                "digest": {
                  "type": "string"
                }
              }
            }
          }
        },
        "indexDigest": {
          "type": ["string", "null"],
          "description": "Optional for backwards compatibility. This field is not directly returned by the container registry, it is appended before returning the ImageManifest. It is only applicable to multi-platform images."
        },
        "manifestDigest": {
          "type": ["string", "null"],
          "description": "Optional for backwards compatibility. This field is not directly returned by the container registry, it is appended before returning the ImageManifest."
        }
      }
    }
  }
}
