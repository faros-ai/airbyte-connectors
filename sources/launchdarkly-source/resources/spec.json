{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LaunchDarkly Spec",
    "type": "object",
    "required": ["token"],
    "additionalProperties": true,
    "properties": {
      "token": {
        "order": 0,
        "type": "string",
        "title": "LaunchDarkly Access Token",
        "description": "Personal or service access token for LaunchDarkly API",
        "airbyte_secret": true
      },
      "page_size": {
        "order": 1,
        "type": "integer",
        "title": "Page Size",
        "description": "Number of items to fetch per page",
        "default": 20
      },
      "custom_streams": {
        "order": 2,
        "title": "Custom Streams",
        "description": "List of streams to run (if empty, all available streams will run)",
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "projects",
            "environments",
            "feature_flags",
            "users",
            "experiments"
          ]
        }
      }
    }
  }
}
