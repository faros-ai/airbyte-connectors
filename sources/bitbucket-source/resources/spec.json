{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Bitbucket Spec",
    "type": "object",
    "required": [
      "workspace",
      "repository",
      "pipeline",
      "pull_request_id"
    ],
    "additionalProperties": false,
    "properties": {
      "serverUrl": {
        "type": "string",
        "description": "Bitbucket server URL",
        "examples": ["https://api.bitbucket.org/2.0"],
        "default": "https://api.bitbucket.org/2.0"
      },
      "username": {
        "type": "string",
        "description": "Bitbucket username"
      },
      "password": {
        "type": "string",
        "description": "Bitbucket password",
        "airbyte_secret": true
      },
      "token": {
        "type": "string",
        "description": "Bitbucket token",
        "airbyte_secret": true
      },
      "workspace": {
        "type": "string",
        "title": "Bitbucket Workspace"
      },
      "repository": {
        "type": "string",
        "title": "Bitbucket Workspace's Repository", 
        "description": "Comma-separated list of Bitbucket repositories"
      },
      "pipeline": {
        "type": "string",
        "title": "Bitbucket Workspace Repository's Pipeline",
        "description": "Comma-separated list of Bitbucket pipelines"
      },
      "pull_request_id": {
        "type": "string",
        "title": "Bitbucket Workspace Repository's Pull Request ID",
        "description": "Comma-separated list of Bitbucket Pull Request's IDs. ID is using to pull PullRequest's Activities"
      },
      "pagelen": {
        "type": "number",
        "description": "Bitbucket Page Length",
        "default": 100
      }
    }
  }
}
