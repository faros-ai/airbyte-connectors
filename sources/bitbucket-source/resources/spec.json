{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Bitbucket Spec",
    "type": "object",
    "required": [
      "serverUrl",
      "workspace"
    ],
    "additionalProperties": false,
    "properties": {
      "serverUrl": {
        "type": "string",
        "description": "Bitbucket server URL",
        "examples": ["https://api.bitbucket.org/2.0"]
      },
      "username": {
        "type": "string",
        "description": "Bitbucket username"
      },
      "password": {
        "type": "string",
        "description": "Bitbucket password",
        "airbyte_secret": true
      },
      "token": {
        "type": "string",
        "description": "Bitbucket token",
        "airbyte_secret": true
      },
      "workspace": {
        "type": "string",
        "description": "Bitbucket workspace"
      },
      "repository": {
        "type": "string",
        "description": "Comma-separated list of Bitbucket repositories"
      }
    }
  }
}
