{
  "name": "office365calendar-source",
  "version": "0.0.1",
  "description": "Office 365 Calendar Airbyte source",
  "keywords": [
    "airbyte",
    "source",
    "faros",
    "microsoft",
    "office365",
    "o365",
    "calendar"
  ],
  "homepage": "https://www.faros.ai",
  "author": "Faros AI, Inc.",
  "license": "Apache-2.0",
  "files": [
    "lib/",
    "resources/"
  ],
  "main": "./lib",
  "scripts": {
    "build": "tsc -p src",
    "clean": "rm -rf lib node_modules out",
    "fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts' && npm run lint -- --fix",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "test": "jest --verbose --color",
    "test-cov": "jest --coverage --verbose --color",
    "test-integration": "jest --verbose --color --config=jest.integration.config.js",
    "test-all": "jest --verbose --color --testPathIgnorePatterns=''",
    "test:real-world": "jest --verbose --color real-world-tests/",
    "test:real-world:auth": "jest --verbose --color real-world-tests/phase1-auth.test.ts",
    "test:real-world:phase1": "npm run test:real-world:auth",
    "test:real-world:calendars": "jest --verbose --color real-world-tests/phase2-calendars.test.ts",
    "test:real-world:phase2": "npm run test:real-world:calendars",
    "test:real-world:events": "jest --verbose --color real-world-tests/phase3-events.test.ts",
    "test:real-world:phase3": "npm run test:real-world:events",
    "test:auth:quick": "npm run build && node scripts/test-auth.js",
    "watch": "tsc -b -w src test"
  },
  "dependencies": {
    "@azure/identity": "^4.0.0",
    "@azure/msal-node": "^2.0.0", 
    "@microsoft/microsoft-graph-client": "^3.0.0",
    "axios": "^1.8.4",
    "faros-airbyte-cdk": "*",
    "verror": "^1.10.1"
  },
  "jest": {
    "coverageDirectory": "out/coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/integration/"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node", 
    "testTimeout": 10000,
    "testPathIgnorePatterns": [
      "<rootDir>/integration-tests/",
      "<rootDir>/test/error-handling.test.ts",
      "<rootDir>/test/index.test.ts", 
      "<rootDir>/test/models.test.ts",
      "<rootDir>/test/office365calendar.test.ts",
      "<rootDir>/test/streams/",
      "<rootDir>/test/microsoft-graph-sdk-refactor.test.ts",
      "<rootDir>/test/main-source-implementation.test.ts",
      "<rootDir>/test/auth-compliance.test.ts"
    ],
    "transform": {
      "\\.ts?$": [
        "ts-jest",
        {
          "tsconfig": "test/tsconfig.json"
        }
      ]
    }
  },
  "devDependencies": {
    "@microsoft/microsoft-graph-types": "^2.40.0",
    "faros-airbyte-testing-tools": "*"
  }
}