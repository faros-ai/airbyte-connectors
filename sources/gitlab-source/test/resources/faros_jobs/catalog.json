{
  "streams": [
    {
      "stream": {
        "name": "faros_jobs",
        "json_schema": {
          "$schema": "http://json-schema.org/draft-07/schema#",
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "id": {
              "type": "number"
            },
            "pipeline_id": {
              "type": "number"
            },
            "name": {
              "type": "string"
            },
            "stage": {
              "type": "string"
            },
            "status": {
              "type": "string"
            },
            "created_at": {
              "type": ["string", "null"],
              "format": "date-time"
            },
            "started_at": {
              "type": ["string", "null"],
              "format": "date-time"
            },
            "finished_at": {
              "type": ["string", "null"],
              "format": "date-time"
            },
            "duration": {
              "type": ["number", "null"]
            },
            "web_url": {
              "type": "string"
            },
            "user": {
              "type": ["object", "null"]
            },
            "pipeline": {
              "type": ["object", "null"]
            },
            "ref": {
              "type": ["string", "null"]
            },
            "commit": {
              "type": ["object", "null"]
            },
            "tag": {
              "type": "boolean"
            },
            "allow_failure": {
              "type": "boolean"
            },
            "artifacts": {
              "type": "array",
              "items": {
                "type": "object"
              }
            },
            "runner": {
              "type": ["object", "null"]
            },
            "group_id": {
              "type": "string"
            },
            "project_path": {
              "type": "string"
            }
          }
        }
      },
      "sync_mode": "full_refresh",
      "destination_sync_mode": "overwrite"
    }
  ]
}
