{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "project_path": {
      "type": "string"
    },
    "message": {
      "type": ["string", "null"]
    },
    "target": {
      "type": "string"
    },
    "commit": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "short_id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "release": {
      "type": ["object", "null"],
      "properties": {
        "tag_name": {
          "type": "string"
        },
        "description": {
          "type": ["string", "null"]
        }
      }
    }
  }
}
