{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Jenkins Spec",
    "type": "object",
    "required": [
      "server_url",
      "user",
      "token"
    ],
    "additionalProperties": false,
    "properties": {
      "server_url": {
        "type": "string",
        "description": "Jenkins Server URL",
        "examples": [
          "https://my-jenkins-server.example.com"
        ]
      },
      "user": {
        "type": "string",
        "description": "Jenkins User"
      },
      "token": {
        "type": "string",
        "description": "Jenkins Token",
        "airbyte_secret": true
      },
      "depth": {
        "type": "number",
        "description": "Jenkins JSON API does not support deep scan, it is required to\ngenerate a suitable tree for the corresponding depth. Job in some cases have \nmany sub jobs, depth needs to quantify how many sub jobs are showed"
      },
      "pageSize": {
        "type": "number",
        "default": 10,
        "description": "Quantity of jobs on a single page fetched from Jenkins"
      },
      "last100Builds": {
        "type": "boolean",
        "default": false,
        "description": "Fetch only 100 last builds from Jenkins server"
      }
    }
  }
}
