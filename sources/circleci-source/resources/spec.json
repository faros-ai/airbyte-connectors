{
  "documentationUrl": "https://docs.faros.ai",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CircleCI Spec",
    "type": "object",
    "required": [
      "token",
      "org_slug",
      "repo_name",
      "cutoff_days"
    ],
    "additionalProperties": false,
    "properties": {
      "token": {
        "type": "string",
        "title": "token",
        "description": "CircleCI personal API token, https://circleci.com/docs/2.0/managing-api-tokens/#creating-a-personal-api-token",
        "airbyte_secret": true
      }, 
      "org_slug": {
        "type": "string",
        "title": "organization slug",
        "description": "organization slug => project_type/organization_name"
      },
      "repo_name": {
        "type": "string",
        "title": "repository name",
        "description": "CircleCI repository name"
      },
      "cutoff_days": {
        "type": "integer",
        "title": "Cutoff Days",
        "default": 90,
        "description": "Only fetch data updated after cutoff"
      },
      "rejectUnauthorized": {
        "type": "boolean",
        "title": "reject Unauthorized",
        "description": "CircleCI reject Unauthorized"
      },
      "url": {
        "type": "string",
        "title": "API URL",
        "description": "CircleCI API URL"
      }
    }
  }
}
