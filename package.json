    "@types/jest": "^27.5.0",
    "@types/lodash": "^4.14.173",
    "@types/luxon": "^2.3.2",
    "@types/node": "^17.0.31",
    "@types/parse-link-header": "2.0.0",
    "@types/pino": "^7.0.5",
    "@types/temp": "^0.9.1",
    "@types/toposort": "^2.0.3",
    "@types/traverse": "^0.6.32",
    "@types/turndown": "^5.0.1",
    "@types/uuid": "^8.3.4",
    "@types/verror": "^1.10.5",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
